<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeaed"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ebeaed"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/credNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="#0e7d9a"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/nomePess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="#0e7d9a"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/emailIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="#787878"
            android:textSize="24sp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linear"
        android:background="#ebeaed"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#a3a1a8" />

        <Button
            android:id="@+id/meusProj"
            android:layout_width="fill_parent"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_botao_normal"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Os Meus Projectos"
            android:textColor="#0e7d9a"
            android:textSize="24sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#a3a1a8" />

        <Button
            android:id="@+id/addProj"
            android:layout_width="fill_parent"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_botao_normal"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Adicionar Projectos"
            android:textColor="#0e7d9a"
            android:textSize="24sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#a3a1a8" />

        <Button
            android:id="@+id/inputHoras"
            android:layout_width="fill_parent"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_botao_normal"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Imputar Horas"
            android:textColor="#0e7d9a"
            android:textSize="24sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#a3a1a8" />
    </LinearLayout>

</RelativeLayout>