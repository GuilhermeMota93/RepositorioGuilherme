package com.example.itlog.adapters;

public class InputHoras_Spinner_Adapter {

	private int recurso;
	Context context;
	LayoutInflater inflater;
	ArrayList<String> list = new ArrayList<String>();
	private ArrayList<Project> projects;
	ImageButton imageButton;
	TextView textView;
	Typeface font;

	public Calendario2_Adapter(final Context context, final int recurso,
			ArrayList<String> list) {
		super(context, R.layout.calendario_versao2, list);
		this.list = list;
		this.recurso = recurso;
		this.inflater = (LayoutInflater) context
				.getSystemService(Context.LAYOUT_INFLATER_SERVICE);
	}

	public Calendario2_Adapter(final Context context, final int recurso,
			ArrayList<Project> projects, Typeface font) {
		super(context, R.layout.calendario_versao2, projects);
		this.projects = projects;
		this.recurso = recurso;
		this.inflater = (LayoutInflater) context
				.getSystemService(Context.LAYOUT_INFLATER_SERVICE);
		this.font = font;
	}

	@Override
	public View getView(int position, View convertView, ViewGroup parent) {
		// TODO Auto-generated method stub
		View v = convertView;
		if (v == null)
			v = inflater.inflate(R.layout.calendario_item2, null);
		Project row = projects.get(position);
		if (row != null) {

		}
		textView = (TextView) v.findViewById(R.id.textViewCalendarItem2);
		textView.setText(list.get(position));
		imageButton = (ImageButton) v
				.findViewById(R.id.imageButtonCalendarItem2);
		return v;
	}

}
